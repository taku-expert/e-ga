.header
  .header__top
    .header__top__left-box
      .pulldown-btn
        %i.far.fa-list-alt
      .logo
    .header__top__search-box
      .header__top__search-btn
        %i.fas.fa-search
    .header__top__right-box
      - if user_signed_in?
        = current_user.name
      - else
        = link_to "新規登録", new_user_registration_path, class: "sign-up-btn"
      .user-image
      .user-nickname
  .header__bottom
    .header__bottom__left-box
      %ul.dropdown
        %li 
          = link_to 'ホーム', '/'
        %li#genre
          = link_to 'ジャンル', '/'
          %ul.dropdown_menu
            %li.dropdown_menu
              - @genres.each do |genre|
                = link_to "#{genre.name}", "#"
        %li
          = link_to 'お気に入り', '/'
    .header__bottom__right-box
      %ul
        %li
          = link_to '設定', '/'
        %li
          = link_to '使い方', getstarted_path
        %li
          = link_to 'ヘルプ', '/'
