%body
  .content
    .content-top
      .contents
        .container
          = form_for @comment, url: movie_comments_path(@movie) do |form|
            #star.form-group.row
              = form.label :rate, "評価", class:"rate"
              = form.hidden_field :rate, id: :review_star
            :javascript
              $('#star').raty({
                size        : 36,
                starOff     : '#{asset_path('star-off.png')}',
                starOn      : '#{asset_path('star-on.png')}',
                scoreName   : 'comment[rate]',
              });
            .form-group.row
              = form.label :"タイトル"
              = form.text_field :title, id: :comment_title
            .form-group.row
              = form.label :"レビュー内容"
              = form.text_area :text, id: :comment_text
            .form-group.row
              = form.submit